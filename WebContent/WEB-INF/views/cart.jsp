	<section id="cart_items">
		<div class="container">
			<div class="table-responsive cart_info">
				<table class="table table-condensed">
					<thead>
						<tr class="cart_menu">
							<td class="image">Sản Phẩm</td>
							<td class="description"></td>
							<td class="price">Giá</td>
							<td class="quantity">Số Lượng</td>
							<td class="total">Tổng Cộng</td>
							<td></td>
						</tr>
					</thead>
					<tbody>
						<c:forEach var="map" items="${sessionScope.myCartItems}">
						<tr>
							<td class="cart_product">
								<a href=""><img class="imgproduct" src="images/home/${map.value.product.photo}" alt=""></a>
							</td>
							<td class="cart_description">
								<h4><a href="">${map.value.product.name}</a></h4>
								<p>Mã Sản Phẩm: 1089772</p>
							</td>
							<td class="cart_price">
								<p>${map.value.product.price} VND</p>
							</td>
							<td class="cart_quantity">
								<div class="cart_quantity_button">
									${map.value.quantity}
								</div>
							</td>
							<td class="cart_total">
								${map.value.product.price * map.value.quantity} VND
							</td>
							<td class="cart_delete">
								<a class="cart_quantity_delete" href="user/cart/remove/${map.value.product.id}.htm"><i class="fa fa-times"></i></a>
							</td>
						</tr>	
						</c:forEach>					
					</tbody>
				</table>
			</div>
		</div>
	</section> <!--/#cart_items-->

